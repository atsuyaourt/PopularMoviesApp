<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/movie_trailer_card_view"
    android:layout_width="160dp"
    android:layout_height="120dp"
    android:layout_margin="4dp"
    android:background="@drawable/touch_selector">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/trailer_thumb_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:adjustViewBounds="true" />

        <ImageView
            android:id="@+id/trailer_play_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:src="@drawable/ic_play_circle_filled_white_36dp"
            android:tint="@color/deep_teal_500"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/trailer_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Movie Trailer"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:background="@color/white_transparent"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:visibility="gone" />

    </RelativeLayout>

</android.support.v7.widget.CardView>